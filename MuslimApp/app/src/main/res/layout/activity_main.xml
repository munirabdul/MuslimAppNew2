<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorBlue"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginBottom="30dp"
        android:src="@drawable/mosque"/>


    <Button
        android:id="@+id/btn_jadwal_sholat"
        android:layout_width="@dimen/padding_layout_side"
        android:layout_height="wrap_content"
        android:text="Jadwal Sholat"
        android:fontFamily="@font/nextart"
        android:layout_marginBottom="5dp"
        android:textSize="15dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_rounded"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/btn_produk_halal"
        android:textAllCaps="false"
        android:text="Produk Halal"
        android:fontFamily="@font/nextart"
        android:textSize="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_rounded"
        android:layout_width="@dimen/padding_layout_side"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_doa_harian"
        android:textAllCaps="false"
        android:text="Dzikir Harian"
        android:fontFamily="@font/nextart"
        android:textSize="15dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_rounded"
        android:layout_width="@dimen/padding_layout_side"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Abdul Munir (311620802) TI.16.D.6"
        android:paddingTop="16dp"
        android:gravity="center"
        android:textSize="10dp"
        android:fontFamily="@font/nextart"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="STT Pelita Bangsa - Bekasi"
        android:gravity="center"
        android:textSize="10dp"
        android:fontFamily="@font/nextart"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="&#169;2019"
        android:textSize="10dp"
        android:fontFamily="@font/nextart"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>